<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/save_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_5sdp"
    app:cardElevation="@dimen/_5sdp"
    app:cardCornerRadius="@dimen/_10sdp"
    app:layout_constraintTop_toBottomOf="@id/save_offers"
    android:layout_margin="@dimen/_5sdp"

    >
    <FrameLayout
        android:background="#808080"
        android:layout_width="4dp"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        /> <FrameLayout
        android:background="#808080"
        android:layout_width="4dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        />

    <FrameLayout
        android:background="#808080"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_3sdp"
        />
    <FrameLayout
        android:background="#808080"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_3sdp"
        android:layout_gravity="bottom"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_5sdp"
        >

        <TextView
            android:id="@+id/save_offer_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/_16ssp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="انتريه مودرن" />

        <LinearLayout
            android:id="@+id/linear1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/save_offer_name">

            <TextView
                android:id="@+id/item1_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_weight="1"
                tools:text="dsadas" />

            <TextView
                android:id="@+id/item1_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_weight="1"
                android:textSize="@dimen/_21ssp"
                tools:text="2" />


            <ImageView
                android:id="@+id/item1_image"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_weight="1"
                tools:src="@drawable/offers_homs"

                />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/linear2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/linear1"
            android:layout_marginTop="@dimen/_5sdp"
            >

            <TextView
                android:id="@+id/item2_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_weight="1"
                tools:text="dsadas" />

            <TextView
                android:id="@+id/item2_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_weight="1"
                android:textSize="@dimen/_21ssp"
                tools:text="2" />


            <ImageView
                android:id="@+id/item2_image"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_weight="1"
                tools:src="@drawable/offers_homs"

                />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/linear3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/linear2"
            android:layout_marginTop="@dimen/_5sdp"
            >

            <TextView
                android:id="@+id/item3_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_weight="1"
                tools:text="dsadas" />

            <TextView
                android:id="@+id/item3_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_weight="1"
                android:textSize="@dimen/_21ssp"
                tools:text="2" />


            <ImageView
                android:id="@+id/item3_image"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_weight="1"
                tools:src="@drawable/offers_homs"

                />

        </LinearLayout>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/item4_image"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            tools:src="@drawable/offers_homs"
            app:layout_constraintTop_toBottomOf="@id/linear3"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            />
        <TextView
            android:id="@+id/item4_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/linear3"
            app:layout_constraintEnd_toStartOf="@id/item4_image"
            app:layout_constraintTop_toTopOf="@id/item4_image"
            app:layout_constraintBottom_toBottomOf="@id/item4_image"
            android:layout_marginEnd="@dimen/_10sdp"
            android:textSize="@dimen/_15ssp"
            tools:text="dsadsa"
            android:textColor="@color/black"
            />
        <TextView
            android:id="@+id/tv_save_price_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/item4_image"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="@string/tv_offer_price"
            android:textSize="@dimen/_20ssp"
            />
        <TextView
            android:id="@+id/tv_save_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/item4_image"
            app:layout_constraintEnd_toStartOf="@id/tv_save_price_txt"
            app:layout_goneMarginEnd="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_10sdp"
            app:layout_constraintTop_toTopOf="@id/tv_save_price_txt"
            app:layout_constraintBottom_toBottomOf="@id/tv_save_price_txt"
            android:textSize="@dimen/_20ssp"
            app:layout_constraintBaseline_toBaselineOf="@id/tv_save_price_txt"
            />

        <ImageView
            android:id="@+id/base_image"
            android:layout_width="@dimen/_170sdp"
            android:layout_height="@dimen/_170sdp"
            tools:src="@drawable/offers_homs"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>

